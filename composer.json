{
    "name": "plinker/core",
    "type": "library",
    "description": "PlinkerRPC PHP client/server makes it really easy to link and execute PHP component classes on remote systems, while maintaining the feel of a local method call.",
    "license": "MIT",
    "keywords": [
        "plinker",
        "RPC",
        "client",
        "server",
        "remote"
    ],
    "homepage": "https://github.com/lcherone/plinker-core",
    "authors": [
        {
            "name": "Lawrence Cherone",
            "email": "lawrence@cherone.co.uk",
            "homepage": "https://cherone.co.uk",
            "role": "Owner"
        }
    ],
    "require": {
        "opis/closure": "^2.2.0"
    },
    "require-dev": {
        "phpunit/phpunit": "4.*"
    },
    "autoload": {
        "psr-4": {
            "Plinker\\Core\\": "src"
        },
        "files": [
            "src/client_function.php"
        ]
    },
    "autoload-dev": {
        "psr-4": {
            "Plinker\\Core\\Test\\": "tests",
            "Plinker\\Core\\Lib\\": "src/lib",
            "Plinker\\Core\\Endpoint\\": "src/endpoint"
        }
    },
    "scripts": {
        "test" : "bash ./tests/run.sh"
    },
    "minimum-stability": "stable"
}
